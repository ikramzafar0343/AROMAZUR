<section class="az-trust" id="trust" aria-labelledby="TrustTitle-{{ section.id }}">
  <div class="page-width az-trust__container">
    {% if section.settings.heading != blank %}
      <h2 class="az-trust__title" id="TrustTitle-{{ section.id }}">{{ section.settings.heading }}</h2>
    {% endif %}
    <ul class="az-trust__grid" role="list">
      {% for block in section.blocks %}
        <li class="az-trust__item" {{ block.shopify_attributes }} role="listitem">
          <div class="az-trust__icon" aria-hidden="true">
            {% case block.settings.icon %}
              {% when 'grasse' %}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2L15 8L22 9L17 14L18 21L12 18L6 21L7 14L2 9L9 8L12 2Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                </svg>
              {% when 'ipra' %}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3Z" stroke="currentColor" stroke-width="2"/>
                </svg>
              {% when 'delivery' %}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 17H4C2.89543 17 2 16.1046 2 15V8C2 6.89543 2.89543 6 4 6H16C17.1046 6 18 6.89543 18 8V15C18 16.1046 17.1046 17 16 17H15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <path d="M8 17H16L18 21H6L8 17Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                  <path d="M9 10H15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              {% when 'payment' %}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 10H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <path d="M3 14H18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <path d="M5 6H19C20.1046 6 21 6.89543 21 8V16C21 17.1046 20.1046 18 19 18H5C3.89543 18 3 17.1046 3 16V8C3 6.89543 3.89543 6 5 6Z" stroke="currentColor" stroke-width="2"/>
                </svg>
              {% else %}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3Z" stroke="currentColor" stroke-width="2"/>
                </svg>
            {% endcase %}
          </div>
          <h3 class="az-trust__item-title">{{ block.settings.title }}</h3>
          {% if block.settings.text != blank %}
            <p class="az-trust__item-text">{{ block.settings.text }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Trust",
  "tag": "section",
  "class": "section-home-trust",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": ""
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "grasse", "label": "Made in Grasse (star)" },
            { "value": "ipra", "label": "IPRA / certified (check)" },
            { "value": "delivery", "label": "Delivery (truck)" },
            { "value": "payment", "label": "Payment (card)" }
          ],
          "default": "grasse"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust",
      "blocks": [
        {
          "type": "trust_item",
          "settings": {
            "icon": "grasse",
            "title": "Made in Grasse",
            "text": "Crafted in the perfume capital of the world, where centuries of savoir-faire meet modern innovation."
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "ipra",
            "title": "IPRA Partnership",
            "text": "Proud partner of the International Fragrance Association. Safe, transparent, and responsibly crafted."
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "delivery",
            "title": "Free Delivery",
            "text": "Complimentary shipping on orders over a set threshold. Fast and reliable delivery across France and beyond."
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "payment",
            "title": "Secure Payment",
            "text": "Your payment is protected. We use industry-standard encryption and trusted payment providers."
          }
        }
      ]
    }
  ]
}
{% endschema %}
