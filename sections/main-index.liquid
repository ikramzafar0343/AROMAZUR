<section class="main-index">
  <div class="page-width">
    <h1>{{ section.settings.heading }}</h1>
    {% if section.settings.text != blank %}
      <div class="rte">
        {{ section.settings.text }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Main page",
  "tag": "section",
  "class": "section-main-index",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Home"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Start building your Shopify Liquid theme here.</p>"
    }
  ]
}
{% endschema %}
