    },
    {
      "type": "header",
      "content": "Bottom bar"
    },
    {
      "type": "text",
      "id": "bottom_left_text",
      "label": "Bottom left text",
      "default": "All rights reserved."
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
