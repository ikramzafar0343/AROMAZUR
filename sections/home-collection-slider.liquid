{% liquid
  assign diffusers_collection = collections['scent-diffusers']
  if diffusers_collection == blank
    assign diffusers_collection = collections['diffusers']
  endif

  assign oils_collection = collections['fragrance-oils']
  if oils_collection == blank
    assign oils_collection = collections['diffuser-oils']
  endif

  assign voyage_collection = collections['voyage']
  if voyage_collection == blank
    assign voyage_collection = collections['scent-voyage']
  endif

  assign room_sprays_collection = collections['fragrance-room-sprays']
  if room_sprays_collection == blank
    assign room_sprays_collection = collections['room-sprays']
  endif

  assign candles_collection = collections['candles']

  assign perfumes_collection = collections['perfumes']
  if perfumes_collection == blank
    assign perfumes_collection = collections['fragrances']
  endif

  assign hotel_collection = collections['hotel-collection']
  if hotel_collection == blank
    assign hotel_collection = collections['hotel']
  endif
  assign designer_collection = collections['designer-collection']
  if designer_collection == blank
    assign designer_collection = collections['designer']
  endif
  assign coffrets_collection = collections['coffrets']

  assign all_url = routes.all_products_collection_url

  if hotel_collection != blank
    assign hotel_url = hotel_collection.url
  else
    assign hotel_url = all_url
  endif
  if designer_collection != blank
    assign designer_url = designer_collection.url
  else
    assign designer_url = all_url
  endif
  if coffrets_collection != blank
    assign coffrets_url = coffrets_collection.url
  else
    assign coffrets_url = diffusers_url
  endif

  if diffusers_collection != blank
    assign diffusers_url = diffusers_collection.url
  else
    assign diffusers_url = all_url
  endif

  if oils_collection != blank
    assign oils_url = oils_collection.url
  else
    assign oils_url = all_url
  endif

  if voyage_collection != blank
    assign voyage_url = voyage_collection.url
  else
    assign voyage_url = all_url
  endif

  if room_sprays_collection != blank
    assign room_sprays_url = room_sprays_collection.url
  else
    assign room_sprays_url = all_url
  endif

  if candles_collection != blank
    assign candles_url = candles_collection.url
  else
    assign candles_url = all_url
  endif

  if perfumes_collection != blank
    assign perfumes_url = perfumes_collection.url
  else
    assign perfumes_url = all_url
  endif
%}

<section class="az-col-slider" id="collections" aria-labelledby="ColSliderTitle-{{ section.id }}">
