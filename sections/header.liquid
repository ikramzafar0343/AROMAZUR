        </div>
      </div>
    {% endunless %}

    <!-- Cart Modal -->
    <div class="az-cart" id="CartModal-{{ section.id }}" data-cart-modal hidden role="dialog" aria-modal="true" aria-label="Shopping cart">
      <div class="az-cart__overlay" data-cart-close></div>
      <div class="az-cart__panel">
        <div class="az-cart__header">
          <h2 class="az-cart__title" data-cart-title-base="{{ 'cart.title' | t | default: 'Panier' }}">{{ 'cart.title' | t | default: 'Panier' }}{% if cart.item_count > 0 %} ({{ cart.item_count }}){% endif %}</h2>
          <button class="az-cart__close" type="button" aria-label="Close cart" data-cart-close>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>

        <div class="az-cart__content" data-cart-content>
          <div class="az-cart__empty" {% if cart.item_count > 0 %}hidden{% endif %}>
              <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M6 12H18L17 22H7L6 12Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <path d="M10 2H14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M9 7C9 5.34315 10.3431 4 12 4C13.6569 4 15 5.34315 15 7V11" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <p>{{ 'cart.empty' | t | default: 'Votre panier est vide.' }}</p>
              <a href="{{ routes.all_products_collection_url }}" class="az-cart__continue az-btn az-btn--primary">{{ 'cart.discover' | t | default: 'Découvrir nos parfums' }}</a>
          </div>

          <div class="az-cart__items" data-cart-items {% if cart.item_count == 0 %}hidden{% endif %}>
            {% for item in cart.items %}
              <div class="az-cart__item" data-cart-item data-item-key="{{ item.key }}">
                <a href="{{ item.url }}" class="az-cart__item-image">
                  {% if item.image %}
                    {{ item.image | image_url: width: 120 | image_tag: loading: 'lazy', alt: item.title }}
                  {% else %}
                    <div class="az-cart__placeholder"></div>
                  {% endif %}
                </a>
                <div class="az-cart__item-details">
                  <a href="{{ item.url }}" class="az-cart__item-title">{{ item.product.title }}</a>
                  {% if item.variant.title != 'Default Title' %}
                    <div class="az-cart__item-variant">{{ item.variant.title }}</div>
                  {% endif %}
                  <div class="az-cart__item-price">
                    <span class="az-cart__item-price-current" data-cart-line-price>{{ item.final_line_price | money }}</span>
                    {% if item.original_line_price != item.final_line_price %}
                      <span class="az-cart__item-price-compare">{{ item.original_line_price | money }}</span>
                    {% endif %}
                  </div>
                  <div class="az-cart__item-actions">
                    <div class="az-cart__quantity">
                      <button type="button" class="az-cart__qty-btn" data-cart-decrease aria-label="Decrease quantity">−</button>
                      <input type="number" class="az-cart__qty-input" value="{{ item.quantity }}" min="1" data-cart-quantity aria-label="Quantity">
                      <button type="button" class="az-cart__qty-btn" data-cart-increase aria-label="Increase quantity">+</button>
                    </div>
                    <button type="button" class="az-cart__remove" data-cart-remove aria-label="Remove item">Remove</button>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="az-cart__footer" data-cart-footer {% if cart.item_count == 0 %}hidden{% endif %}>
          <div class="az-cart__summary">
            <div class="az-cart__free-shipping" data-cart-free-shipping aria-live="polite"></div>
            <div class="az-cart__summary-row az-cart__summary-row--total">
              <span>{{ 'cart.subtotal' | t | default: 'Sous-total' }}</span>
              <span class="az-cart__total" data-cart-total>{{ cart.total_price | money }}</span>
            </div>
          </div>
          <div class="az-cart__actions">
            <a href="{{ routes.cart_url }}" class="az-cart__view-cart az-btn az-btn--outline">{{ 'cart.view_cart' | t | default: 'Voir le panier' }}</a>
            <a href="/checkout" class="az-cart__checkout az-btn az-btn--primary">
              {{ 'cart.checkout' | t | default: 'Passer la commande' }}
            </a>
          </div>
          <p class="az-cart__trust">{{ 'cart.trust_badge' | t | default: 'Paiement sécurisé par Stripe' }}</p>
        </div>
      </div>
    </div>
  </div>
</header>

