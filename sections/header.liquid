    <div class="az-search" data-search-panel hidden>
      <div class="page-width az-search__inner">
        <form action="{{ routes.search_url }}" method="get" role="search" class="az-search__form">
          <input type="hidden" name="type" value="product">
          <input type="search" name="q" placeholder="Search..." aria-label="Search" autocomplete="off">
          <button type="submit">Search</button>
        </form>
      </div>
    </div>

    <div class="az-mobile" data-mobile-menu hidden>
      <div class="az-mobile__overlay" data-mobile-menu-close></div>
      <div class="az-mobile__panel" role="dialog" aria-label="Menu">
        <div class="az-mobile__top">
          <span class="az-mobile__title">Menu</span>
          <button class="az-icon-btn" type="button" aria-label="Close menu" data-mobile-menu-close>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>
        <div class="az-mobile__content">
          <ul class="az-mobile__list" role="list">
            <li><a href="{{ shop_all_url }}"{% if is_shop_all %} class="az-mobile__link--active" aria-current="page"{% endif %}>SHOP ALL</a></li>
            <li><a href="{{ new_url }}"{% if is_new %} class="az-mobile__link--active" aria-current="page"{% endif %}>#NEW</a></li>
            <li><a href="{{ sale_url }}"{% if is_sale %} class="az-mobile__link--active" aria-current="page"{% endif %}>SALE</a></li>
            <li><a href="{{ diffusers_url }}"{% if is_diffusers %} class="az-mobile__link--active" aria-current="page"{% endif %}>DIFFUSERS</a></li>
            <li><a href="{{ oils_url }}"{% if is_oils %} class="az-mobile__link--active" aria-current="page"{% endif %}>DIFFUSER OILS</a></li>
            <li><a href="{{ voyage_url }}"{% if is_voyage %} class="az-mobile__link--active" aria-current="page"{% endif %}>SCENT VOYAGE</a></li>
            <li><a href="{{ room_sprays_url }}"{% if is_room_sprays %} class="az-mobile__link--active" aria-current="page"{% endif %}>ROOM SPRAYS</a></li>
            <li><a href="{{ candles_url }}"{% if is_candles %} class="az-mobile__link--active" aria-current="page"{% endif %}>CANDLES</a></li>
            <li><a href="{{ perfumes_url }}"{% if is_perfumes %} class="az-mobile__link--active" aria-current="page"{% endif %}>PERFUMES</a></li>
          </ul>
          <div class="az-mobile__utilities">
            <a href="{{ routes.search_url }}">Search</a>
            <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}">{% if customer %}Account{% else %}Sign in{% endif %}</a>
