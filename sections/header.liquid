{% liquid
  assign promo_messages = "FREE SHIPPING OVER €100|LIMITED DROPS WEEKLY|WINTER EVENT: EXTRA 20% OFF|FREE SHIPPING OVER €100"
  assign promo_messages_lines = promo_messages | split: '|'

  comment
    Hardcoded nav: all category links go to Shop All with ?view= so no Admin collections/pages needed.
  endcomment
  assign shop_all_url = routes.all_products_collection_url
  assign new_url = shop_all_url | append: '?view=new'
  assign sale_url = shop_all_url | append: '?view=sale'
  assign diffusers_url = shop_all_url | append: '?view=diffusers'
  assign oils_url = shop_all_url | append: '?view=fragrance-oils'
  assign voyage_url = shop_all_url | append: '?view=voyage'

  assign room_sprays_collection = collections['fragrance-room-sprays']
  if room_sprays_collection == blank
    assign room_sprays_collection = collections['room-sprays']
  endif
  assign candles_collection = collections['candles']
  assign perfumes_collection = collections['perfumes']
  if perfumes_collection == blank
    assign perfumes_collection = collections['fragrances']
  endif
  assign hotel_collection = collections['hotel']
  assign designer_collection = collections['designer']
  assign winter_collection = collections['winter']
  assign disney_collection = collections['disney']
  assign spring_collection = collections['spring']

  if room_sprays_collection != blank
    assign room_sprays_url = room_sprays_collection.url
  else
    assign room_sprays_url = '/collections/room-sprays'
  endif
  if candles_collection != blank
    assign candles_url = candles_collection.url
  else
    assign candles_url = '/collections/candles'
  endif
  if perfumes_collection != blank
    assign perfumes_url = perfumes_collection.url
  else
    assign perfumes_url = '/collections/perfumes'
  endif
  if hotel_collection != blank
    assign hotel_url = hotel_collection.url
  else
    assign hotel_url = '/collections/hotel'
  endif
  if designer_collection != blank
    assign designer_url = designer_collection.url
  else
    assign designer_url = '/collections/designer'
  endif
  if winter_collection != blank
    assign winter_url = winter_collection.url
  else
    assign winter_url = '/collections/winter'
  endif
  if disney_collection != blank
    assign disney_url = disney_collection.url
  else
    assign disney_url = '/collections/disney'
  endif
  if spring_collection != blank
    assign spring_url = spring_collection.url
  else
    assign spring_url = '/collections/spring'
  endif

  assign request_path = request.path | downcase
  assign is_shop_all = false
  if request_path == '/collections/all' or request_path == '/collections/all/'
    assign is_shop_all = true
  endif
  assign qs = request.query_string | downcase
  assign is_new = false
  if qs contains 'view=new'
    assign is_new = true
  endif
  assign is_sale = false
  if qs contains 'view=sale'
    assign is_sale = true
  endif
  assign is_diffusers = false
  if qs contains 'view=diffusers'
    assign is_diffusers = true
  endif
  assign is_oils = false
  if qs contains 'view=fragrance-oils'
    assign is_oils = true
  endif
  assign is_voyage = false
  if qs contains 'view=voyage'
    assign is_voyage = true
  endif
  assign is_room_sprays = false
  if request_path contains 'room-sprays'
    assign is_room_sprays = true
  endif
  assign is_candles = false
  if request_path contains '/collections/candles'
    assign is_candles = true
  endif
  assign is_perfumes = false
  if request_path contains '/collections/perfumes' or request_path contains '/collections/fragrances'
    assign is_perfumes = true
  endif
%}

