{% liquid
  assign new_collection = collections['new']
  if new_collection == blank
    assign new_collection = collections['all']
  endif
  
  assign new_products = new_collection.products
  
  assign categories_list = ''
  for product in new_products limit: 100
    assign product_type = product.type | downcase
    if categories_list == blank
      assign categories_list = product_type
    else
      unless categories_list contains product_type
        assign categories_list = categories_list | append: '|' | append: product_type
      endunless
    endif
  endfor
  assign categories_array = categories_list | split: '|'
  
  assign min_price = 0
  assign max_price = 1000
  for product in new_products limit: 50
    assign product_price = product.price | divided_by: 100.0
    if product_price < min_price or min_price == 0
      assign min_price = product_price
    endif
    if product_price > max_price
      assign max_price = product_price
    endif
  endfor
%}

{% if collection.handle == 'new' or collection.handle == 'new-arrivals' or collection.handle contains 'new' %}
<section class="az-new az-page-transition" data-new-page>
  <!-- Hero Header -->
  <div class="az-new__hero">
    <div class="page-width az-new__hero-inner">
      <div class="az-new__hero-content">
        <div class="az-new__eyebrow az-fade-in az-fade-in--up az-fade-in--slow">NEW ARRIVALS</div>
        <h1 class="az-new__title az-fade-in az-fade-in--up az-fade-in--slow az-fade-in--delay-1">Discover Our Latest Collection</h1>
        <p class="az-new__desc az-fade-in az-fade-in--up az-fade-in--slow az-fade-in--delay-2">Be the first to experience our newest fragrances, diffusers, and home scents. Fresh arrivals added weekly.</p>
      </div>
    </div>
  </div>

  <div class="page-width az-new__container">
    <div class="az-new__layout">
      <!-- Filter Sidebar -->
      <aside class="az-new__sidebar" data-new-sidebar>
        <div class="az-new__sidebar-header">
          <h2 class="az-new__sidebar-title">Filters</h2>
          <button class="az-new__sidebar-close" type="button" data-new-sidebar-close aria-label="Close filters">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>

        <div class="az-new__filters">
          <!-- Category Filter -->
          <div class="az-new__filter-group">
            <h3 class="az-new__filter-title">Category</h3>
            <div class="az-new__filter-options">
              <label class="az-new__filter-option">
                <input type="radio" name="new-category" value="all" data-new-filter="category" checked>
                <span>All Products</span>
              </label>
              {% for category in categories_array %}
                {% if category != blank %}
                  <label class="az-new__filter-option">
                    <input type="radio" name="new-category" value="{{ category | handle }}" data-new-filter="category">
                    <span>{{ category }}</span>
                  </label>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <!-- Price Range Filter -->
          <div class="az-new__filter-group">
            <h3 class="az-new__filter-title">Price Range</h3>
            <div class="az-new__price-range">
              <div class="az-new__price-inputs">
                <input type="number" class="az-new__price-input" data-new-price-min placeholder="{{ min_price | times: 100 | money_without_currency }}" min="0" step="0.01">
                <span>to</span>
                <input type="number" class="az-new__price-input" data-new-price-max placeholder="{{ max_price | times: 100 | money_without_currency }}" min="0" step="0.01">
              </div>
              <div class="az-new__price-slider">
                <input type="range" class="az-new__range" data-new-range-min min="{{ min_price | times: 100 }}" max="{{ max_price | times: 100 }}" value="{{ min_price | times: 100 }}" step="1">
                <input type="range" class="az-new__range" data-new-range-max min="{{ min_price | times: 100 }}" max="{{ max_price | times: 100 }}" value="{{ max_price | times: 100 }}" step="1">
              </div>
            </div>
          </div>

          <button type="button" class="az-new__reset" data-new-reset>Reset Filters</button>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="az-new__main">
        <!-- Toolbar -->
        <div class="az-new__toolbar">
          <div class="az-new__results">
            Showing <span data-new-count>{{ new_products.size }}</span> results
          </div>
          
          <div class="az-new__toolbar-actions">
            <button class="az-new__filter-toggle" type="button" data-new-sidebar-toggle>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M3 6H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M3 12H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              Filters
            </button>
            
            <select class="az-new__sort" data-new-sort>
              <option value="featured">Featured</option>
              <option value="price-asc">Price: Low to High</option>
              <option value="price-desc">Price: High to Low</option>
              <option value="newest">Newest</option>
            </select>
          </div>
        </div>

        <!-- Product Grid -->
        <div class="az-new__grid" data-new-grid>
          {% for product in new_products %}
            {% liquid
              assign category_token = ''
              assign type_lc = product.type | downcase
              case type_lc
                when 'diffusers'
                  assign category_token = 'diffusers'
                when 'fragrance oils'
                  assign category_token = 'fragrance-oils'
                when 'room sprays'
                  assign category_token = 'room-sprays'
                when 'candles'
                  assign category_token = 'candles'
                when 'perfumes'
                  assign category_token = 'perfumes'
              endcase
              
              if category_token == blank
                assign category_token = type_lc | handle
              endif
              
              assign on_sale = false
              if product.compare_at_price > product.price
                assign on_sale = true
              endif
              
              assign is_new = false
              for tag in product.tags
                assign tag_lc = tag | downcase
                if tag_lc == 'new' or tag_lc contains 'new'
                  assign is_new = true
                  break
                endif
              endfor
            %}
            
            {% assign delay_index = forloop.index0 | modulo: 5 | plus: 1 %}
            <div class="az-new__product az-prod az-hover-lift az-fade-in az-fade-in--up az-fade-in--delay-{{ delay_index }}" 
                 data-new-product 
                 data-category="{{ category_token }}"
                 data-price="{{ product.price }}"
                 data-on-sale="{% if on_sale %}true{% else %}false{% endif %}"
                 data-is-new="{% if is_new %}true{% else %}false{% endif %}">
              <a class="az-prod__link" href="{{ product.url }}">
                <div class="az-prod__media">
                  {% if product.featured_image %}
                    {{ product.featured_image | image_url: width: 700 | image_tag: loading: 'lazy', decoding: 'async', alt: product.title }}
                  {% else %}
                    <div class="az-prod__placeholder"></div>
                  {% endif %}
                  {% if is_new %}
                    <span class="az-prod__badge">NEW</span>
                  {% elsif on_sale %}
                    <span class="az-prod__badge">SALE</span>
                  {% endif %}
                </div>
                <div class="az-prod__body">
                  <h3 class="az-prod__title">{{ product.title }}</h3>
                  <div class="az-prod__price">
                    <span class="az-prod__price-current">{{ product.price | money }}</span>
                    {% if on_sale %}
                      <span class="az-prod__price-compare">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                </div>
              </a>

              <div class="az-prod__actions">
                {% form 'product', product, class: 'az-prod__form' %}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <button class="az-prod__btn" type="submit" {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
                    {% if product.selected_or_first_available_variant.available %}
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle; margin-right: 6px;">
                        <path d="M6 2L3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V6L18 2H6Z" stroke="currentColor" stroke-width="2"/>
                        <path d="M3 6H21" stroke="currentColor" stroke-width="2"/>
                        <path d="M16 10C16 12.2091 14.2091 14 12 14C9.79086 14 8 12.2091 8 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                      </svg>
                      Add to cart
                    {% else %}
                      Sold out
                    {% endif %}
                  </button>
                {% endform %}
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Empty State -->
        <div class="az-new__empty" data-new-empty hidden>
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2"/>
          </svg>
          <p>No products found matching your filters.</p>
          <button type="button" class="az-new__reset-btn" data-new-reset>Clear Filters</button>
        </div>
      </main>
    </div>
  </div>

  <!-- Featured Section -->
  <div class="az-new__featured">
    <div class="page-width az-new__featured-inner">
      <div class="az-new__featured-content">
        <div class="az-new__featured-eyebrow">Limited Edition</div>
        <h2 class="az-new__featured-title">Spring Collection 2024</h2>
        <p class="az-new__featured-desc">
          Experience the essence of spring with our latest limited edition fragrances. 
          Inspired by blooming gardens and fresh morning air, these scents capture the renewal of the season.
        </p>
        <a href="{{ section.settings.featured_url | default: new_collection.url }}" class="az-new__featured-btn">
          Shop New Arrivals
        </a>
      </div>
      <div class="az-new__featured-visual">
        <div class="az-new__featured-glow"></div>
        <div class="az-new__featured-card">
          <div class="az-new__featured-placeholder"></div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endif %}

