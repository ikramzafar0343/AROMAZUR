{% liquid
  assign diffusers_collection = collections['scent-diffusers']
  if diffusers_collection == blank
    assign diffusers_collection = collections['diffusers']
    if diffusers_collection == blank
      assign diffusers_collection = collections['all']
    endif
  endif
  
  assign diffusers_products = diffusers_collection.products
  
  assign categories_list = ''
  for product in diffusers_products limit: 100
    assign product_type = product.type | downcase
    if categories_list == blank
      assign categories_list = product_type
    else
      unless categories_list contains product_type
        assign categories_list = categories_list | append: '|' | append: product_type
      endunless
    endif
  endfor
  assign categories_array = categories_list | split: '|'
  
  assign min_price = 0
  assign max_price = 1000
  for product in diffusers_products limit: 50
    assign product_price = product.price | divided_by: 100.0
    if product_price < min_price or min_price == 0
      assign min_price = product_price
    endif
    if product_price > max_price
      assign max_price = product_price
    endif
  endfor
%}

{% if collection.handle == 'scent-diffusers' or collection.handle == 'diffusers' or collection.handle contains 'diffuser' %}
<section class="az-diffusers az-page-transition" data-diffusers-page>
  <!-- Hero Header -->
  <div class="az-diffusers__hero">
    <div class="page-width az-diffusers__hero-inner">
      <div class="az-diffusers__hero-content">
        <div class="az-diffusers__eyebrow">DIFFUSERS</div>
        <h1 class="az-diffusers__title">Premium Scent Diffusers</h1>
        <p class="az-diffusers__desc">Transform any space with our elegant diffusers, designed to deliver long-lasting fragrance throughout your home or office.</p>
      </div>
    </div>
  </div>

  <div class="page-width az-diffusers__container">
    <div class="az-diffusers__layout">
      <!-- Filter Sidebar -->
      <aside class="az-diffusers__sidebar" data-diffusers-sidebar>
        <div class="az-diffusers__sidebar-header">
          <h2 class="az-diffusers__sidebar-title">Filters</h2>
          <button class="az-diffusers__sidebar-close" type="button" data-diffusers-sidebar-close aria-label="Close filters">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <path d="M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>

        <div class="az-diffusers__filters">
          <!-- Category Filter -->
          <div class="az-diffusers__filter-group">
            <h3 class="az-diffusers__filter-title">Category</h3>
            <div class="az-diffusers__filter-options">
              <label class="az-diffusers__filter-option">
                <input type="radio" name="diffusers-category" value="all" data-diffusers-filter="category" checked>
                <span>All Products</span>
              </label>
              {% for category in categories_array %}
                {% if category != blank %}
                  <label class="az-diffusers__filter-option">
                    <input type="radio" name="diffusers-category" value="{{ category | handle }}" data-diffusers-filter="category">
                    <span>{{ category }}</span>
                  </label>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <!-- Price Range Filter -->
          <div class="az-diffusers__filter-group">
            <h3 class="az-diffusers__filter-title">Price Range</h3>
            <div class="az-diffusers__price-range">
              <div class="az-diffusers__price-inputs">
                <input type="number" class="az-diffusers__price-input" data-diffusers-price-min placeholder="{{ min_price | times: 100 | money_without_currency }}" min="0" step="0.01">
                <span>to</span>
                <input type="number" class="az-diffusers__price-input" data-diffusers-price-max placeholder="{{ max_price | times: 100 | money_without_currency }}" min="0" step="0.01">
              </div>
              <div class="az-diffusers__price-slider">
                <input type="range" class="az-diffusers__range" data-diffusers-range-min min="{{ min_price | times: 100 }}" max="{{ max_price | times: 100 }}" value="{{ min_price | times: 100 }}" step="1">
                <input type="range" class="az-diffusers__range" data-diffusers-range-max min="{{ min_price | times: 100 }}" max="{{ max_price | times: 100 }}" value="{{ max_price | times: 100 }}" step="1">
              </div>
            </div>
          </div>

          <button type="button" class="az-diffusers__reset" data-diffusers-reset>Reset Filters</button>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="az-diffusers__main">
        <!-- Toolbar -->
        <div class="az-diffusers__toolbar">
          <div class="az-diffusers__results">
            <span class="az-diffusers__results-label">All Diffusers</span>
            <span class="az-diffusers__results-count">(<span data-diffusers-count>{{ diffusers_products.size }}</span> items)</span>
          </div>
          
          <div class="az-diffusers__toolbar-actions">
            <button class="az-diffusers__filter-toggle" type="button" data-diffusers-sidebar-toggle>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M3 6H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M3 12H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              Filters
            </button>
            
            <select class="az-diffusers__sort" data-diffusers-sort>
              <option value="featured">Featured</option>
              <option value="price-asc">Price: Low to High</option>
              <option value="price-desc">Price: High to Low</option>
              <option value="newest">Newest</option>
            </select>
          </div>
        </div>

        <!-- Product Grid -->
        <div class="az-diffusers__grid" data-diffusers-grid>
          {% for product in diffusers_products %}
            {% liquid
              assign category_token = ''
              assign type_lc = product.type | downcase
              case type_lc
                when 'diffusers'
                  assign category_token = 'diffusers'
                when 'room sprays'
                  assign category_token = 'room-sprays'
                when 'fragrance oils'
                  assign category_token = 'fragrance-oils'
              endcase
              
              if category_token == blank
                assign category_token = type_lc | handle
              endif
              
              assign on_sale = false
              if product.compare_at_price > product.price
                assign on_sale = true
              endif
              
              assign coverage = ''
              if product.description contains 'sq ft' or product.description contains 'sqft' or product.description contains 'coverage'
                assign coverage_parts = product.description | split: 'sq' | first | split: 'coverage' | last | strip
                if coverage_parts != blank
                  assign coverage = coverage_parts | append: ' sq ft'
                endif
              endif
            %}
            
            <div class="az-diffusers__product-wrapper">
              {% assign delay_index = forloop.index0 | modulo: 5 | plus: 1 %}
              <div class="az-diffusers__product az-prod az-hover-lift az-fade-in az-fade-in--up az-fade-in--delay-{{ delay_index }}" 
                   data-diffusers-product 
                   data-category="{{ category_token }}"
                   data-price="{{ product.price }}"
                   data-on-sale="{% if on_sale %}true{% else %}false{% endif %}">
                <a class="az-prod__link" href="{{ product.url }}">
                  <div class="az-prod__media">
                    {% if product.featured_image %}
                      {{ product.featured_image | image_url: width: 700 | image_tag: loading: 'lazy', decoding: 'async', alt: product.title }}
                    {% else %}
                      <div class="az-prod__placeholder"></div>
                    {% endif %}
                    {% if on_sale %}
                      <span class="az-prod__badge">SALE</span>
                    {% endif %}
                  </div>
                  <div class="az-prod__body">
                    <h3 class="az-prod__title">{{ product.title }}</h3>
                    <div class="az-prod__price">
                      <span class="az-prod__price-current">{{ product.price | money }}</span>
                      {% if on_sale %}
                        <span class="az-prod__price-compare">{{ product.compare_at_price | money }}</span>
                      {% endif %}
                    </div>
                  </div>
                </a>

                <div class="az-prod__actions">
                  {% form 'product', product, class: 'az-prod__form' %}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button class="az-prod__btn" type="submit" {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
                      {% if product.selected_or_first_available_variant.available %}
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle; margin-right: 6px;">
                          <path d="M6 2L3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V6L18 2H6Z" stroke="currentColor" stroke-width="2"/>
                          <path d="M3 6H21" stroke="currentColor" stroke-width="2"/>
                          <path d="M16 10C16 12.2091 14.2091 14 12 14C9.79086 14 8 12.2091 8 10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        Add to cart
                      {% else %}
                        Sold out
                      {% endif %}
                    </button>
                  {% endform %}
                </div>
              </div>
              
              <!-- Diffuser Details -->
              {% if coverage != blank %}
                <div class="az-diffusers__product-details">
                  <div class="az-diffusers__product-meta">
                    <span class="az-diffusers__product-coverage">
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle; margin-right: 4px;">
                        <path d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22C12 22 19 14.25 19 9C19 5.13 15.87 2 12 2Z" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 11C13.1046 11 14 10.1046 14 9C14 7.89543 13.1046 7 12 7C10.8954 7 10 7.89543 10 9C10 10.1046 10.8954 11 12 11Z" stroke="currentColor" stroke-width="2"/>
                      </svg>
                      Coverage: {{ coverage }}
                    </span>
                  </div>
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>

        <!-- Empty State -->
        <div class="az-diffusers__empty" data-diffusers-empty hidden>
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M18 10H21C21.5304 10 22.0391 10.2107 22.4142 10.5858C22.7893 10.9609 23 11.4696 23 12C23 12.5304 22.7893 13.0391 22.4142 13.4142C22.0391 13.7893 21.5304 14 21 14H18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M2 10H6L7 19H17L18 10H22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M7 10V7C7 5.67392 7.52678 4.40215 8.46447 3.46447C9.40215 2.52678 10.6739 2 12 2C13.3261 2 14.5979 2.52678 15.5355 3.46447C16.4732 4.40215 17 5.67392 17 7V10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <p>No products found matching your filters.</p>
          <button type="button" class="az-diffusers__reset-btn" data-diffusers-reset>Reset Filters</button>
        </div>
      </main>
    </div>
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "Diffusers",
  "tag": "section",
  "class": "section-main-diffusers",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "DIFFUSERS"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Premium Scent Diffusers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Transform any space with our elegant diffusers, designed to deliver long-lasting fragrance throughout your home or office."
    }
  ],
  "presets": [
    {
      "name": "Diffusers"
    }
  ]
}
{% endschema %}
