{% comment %}
  Wishlist page â€“ content is rendered by JS from localStorage (data-wishlist-page).
  Create a page in Shopify Admin with handle "wishlist" and assign template "page.wishlist".
{% endcomment %}
<section class="az-wishlist-page az-page-transition" data-wishlist-page data-section-id="{{ section.id }}">
  <div class="page-width">
    <header class="az-wishlist-page__header">
      <h1 class="az-wishlist-page__title">{{ section.settings.title | default: 'Wishlist' }}</h1>
    </header>

    <div class="az-wishlist-page__empty" data-wishlist-empty hidden>
      <svg class="az-wishlist-page__empty-icon" width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3c3.08 0 5.5 2.42 5.5 5.5 0 3.78-3.4 6.86-8.55 11.54L12 21.35z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <p class="az-wishlist-page__empty-text">{{ section.settings.empty_message | default: 'Your wishlist is empty.' }}</p>
      <a href="{{ routes.all_products_collection_url }}" class="az-wishlist-page__continue">{{ section.settings.continue_shopping_label | default: 'Continue shopping' }}</a>
    </div>

    <div class="az-wishlist-page__items" data-wishlist-items></div>
  </div>
</section>

{% schema %}
{
  "name": "Wishlist",
  "tag": "section",
  "class": "section-main-wishlist",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Wishlist"
    },
    {
      "type": "textarea",
      "id": "empty_message",
      "label": "Empty message",
      "default": "Your wishlist is empty."
    },
    {
      "type": "text",
      "id": "continue_shopping_label",
      "label": "Continue shopping label",
      "default": "Continue shopping"
    }
  ]
}
{% endschema %}
